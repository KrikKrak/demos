.timeline-chart
  .axis
    fill: #808080;
    font-family: sans-serif;
    font-size: 10px;

  .axis line
    stroke-width : 1;
    stroke: grey;
    shape-rendering: crispEdges;

  .axis path
    stroke-width : 1;
    stroke: grey;
    shape-rendering: crispEdges;

  .band
    fill: #FAFAFA;

  .bandLabel
    fill: #F0F0F0;
    font: 10px sans-serif;
    font-weight: bold;

  .bandMinMaxLabel
    fill: blue;
    font: 10px sans-serif;
    font-weight: bold;

  .bandMidLabel
    cursor: default;
    fill: red;
    font: 10px sans-serif;
    font-style: italic;
    font-weight: bold;

  .brush .extent
    stroke: gray;
    fill: blue;
    fill-opacity: .1;

  .chart
    fill: #EEEEEE;

  .interval
    fill: #AAFFFF;
    stroke-width: 6;
    cursor : default;
    pointer-events: true;

  .instant
    fill: #FFAAFF;
    stroke-width: 6;
    cursor : default;
    /*pointer-events: true;*/

  .instantLabel
    fill : blue;
    font: 10px sans-serif;
    shape-rendering: crispEdges;

  .intervalLabel
    fill : black;
    font: 10px sans-serif;
    shape-rendering: crispEdges;

  .item
    cursor : default;
    pointer-events: auto;

  .tooltip
    background-color: #FFFFEE;
    border: 1px solid;
    color : black;
    cursor:default;
    padding: 4px;
    opacity: 1;
    pointer-events: none;
    position: absolute;
    shape-rendering: crispEdges;
    visibility: hidden;
    width: auto;